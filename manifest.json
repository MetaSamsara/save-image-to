{
  "manifest_version": 2,
  "name": "Save image to...",
  "version": "1.0.2",
  "description": "A tiny tool that turns “Save Image As…” into a fast workflow.",
  "permissions": [
    "contextMenus",
    "downloads",
    "storage",
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "save-image-to@metasamsara",
      "strict_min_version": "109.0"
    }
  },
  "data_collection_permissions": {}
}

